<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/register_user_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/register_user_image"
            android:contentDescription="@string/content_description"
            />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/cardCornerRadius"
            app:cardElevation="@dimen/elevation"
            android:layout_margin="@dimen/cv_margins">

            <TextView
                android:id="@+id/register_user_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/register_user_title"
                android:layout_marginBottom="@dimen/bottom_margin"
                android:textColor="@color/grey"
                android:textSize="@dimen/body"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margins"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:text="@string/register_user_login_info"
                    android:textSize="@dimen/title"
                    android:textColor="@color/colorPrimary" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/start_margin"
                    android:layout_marginEnd="@dimen/end_margin"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/user_username_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/register_user_username_hint"
                        android:drawableStart="@drawable/username_drawable"
                        android:drawableTint="@color/icons_blue"
                        android:textSize="@dimen/body"
                        android:inputType="textPersonName"
                        android:drawablePadding="@dimen/padding" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/start_margin"
                    android:layout_marginEnd="@dimen/end_margin"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/user_email_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/register_user_email_hint"
                        android:drawableStart="@drawable/email_drawable"
                        android:drawableTint="@color/icons_blue"
                        android:textSize="@dimen/body"
                        android:inputType="textEmailAddress"
                        android:drawablePadding="@dimen/padding" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/start_margin"
                    android:layout_marginEnd="@dimen/end_margin"
                    app:passwordToggleEnabled="true"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/user_password_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/register_user_password_hint"
                        android:drawableStart="@drawable/password_drawable"
                        android:drawableTint="@color/icons_blue"
                        android:drawablePadding="@dimen/padding"
                        android:inputType="textPassword"
                        android:textSize="@dimen/body"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/register_user_optional_info"
                    android:textSize="@dimen/title"
                    android:layout_marginTop="@dimen/top_margin"
                    android:textColor="@color/colorPrimary" />



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/start_margin"
                    android:layout_marginEnd="@dimen/end_margin"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/user_first_name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/register_user_first_name_hint"
                        android:textSize="@dimen/body"
                        android:inputType="textPersonName"
                        android:drawableStart="@drawable/username_drawable"
                        android:drawableTint="@color/icons_blue"
                        android:drawablePadding="@dimen/padding" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/start_margin"
                    android:layout_marginEnd="@dimen/end_margin"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/user_last_name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/register_user_last_name_hint"
                        android:textSize="@dimen/body"
                        android:inputType="textPersonName"
                        android:drawableStart="@drawable/username_drawable"
                        android:drawableTint="@color/icons_blue"
                        android:drawablePadding="@dimen/padding"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/start_margin"
                    android:layout_marginEnd="@dimen/end_margin"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/user_phone_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/register_user_phone_number_hint"
                        android:drawableStart="@drawable/phone_drawable"
                        android:drawableTint="@color/icons_blue"
                        android:drawablePadding="@dimen/padding"
                        android:textSize="@dimen/body"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/user_terms_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/body"
                        android:checked="false"/>

                    <TextView
                        android:id="@+id/accept_terms_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/bottom_margin"
                        android:textSize="@dimen/body"
                        android:text="@string/register_user_terms" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/register_user_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/top_margin"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="@string/register_user_button"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>