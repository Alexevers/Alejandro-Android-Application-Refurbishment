<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".register.RegisterActivity"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin"
            android:layout_weight="1">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/register_donor_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardElevation="@dimen/elevation"
                card_view:cardCornerRadius="@dimen/cardCornerRadius"
                android:layout_margin="@dimen/cv_margins">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/donor_cv_title"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:textSize="@dimen/title"
                        android:layout_gravity="center"
                        android:textAppearance="?attr/textAppearanceHeadline6" />

                    <ImageView
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/donor_img"
                        android:contentDescription="@string/content_description" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/know_more_donor_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/cv_margins"
                            android:text="@string/cv_more_button"
                            android:textSize="@dimen/body"
                            style="?attr/borderlessButtonStyle" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/start_register_donor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/cv_margins"
                            android:text="@string/cv_start_button"
                            android:textSize="@dimen/body"
                            android:textColor="@color/colorPrimary"
                            app:strokeColor="@color/colorPrimary"
                            card_view:icon="@drawable/start_register_icon"
                            card_view:iconGravity="end"
                            card_view:iconPadding="@dimen/padding"
                            card_view:iconSize="48dp"
                            android:textStyle="bold"
                            card_view:iconTint="@null"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/register_volunteer_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardElevation="@dimen/elevation"
                card_view:cardCornerRadius="@dimen/cardCornerRadius"
                android:layout_margin="@dimen/cv_margins">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/volunteer_cv_title"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:textSize="@dimen/title"
                        android:layout_gravity="center"
                        android:textAppearance="?attr/textAppearanceHeadline6" />

                    <ImageView
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/volunteer_img"
                        android:contentDescription="@string/content_description" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/know_more_volunteer_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/cv_margins"
                            android:text="@string/cv_more_button"
                            android:textSize="@dimen/body"
                            style="?attr/borderlessButtonStyle" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/start_register_volunteer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/cv_margins"
                            android:text="@string/cv_start_button"
                            android:textSize="@dimen/body"
                            android:textColor="@color/colorPrimary"
                            app:strokeColor="@color/colorPrimary"
                            card_view:icon="@drawable/start_register_icon"
                            card_view:iconGravity="end"
                            card_view:iconPadding="@dimen/padding"
                            card_view:iconSize="48dp"
                            android:textStyle="bold"
                            card_view:iconTint="@null"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>